page{
  background-color: #dbdbdb;
  padding-bottom: 140rpx;
}

.address{
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.address .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.address .content>view{
  margin-bottom: 20rpx;
}

.address .content .province-city,
.address .content .user-info {
  display: flex;
}

.address .content .province-city {
  font-size: 28rpx;
  color: #707070;
}

.address .content .detail {
  font-size: 32rpx;
}

.address .content .user-info {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.address .content .gender {
  margin: 0 15rpx;
}

.address .more image{
  width: 60rpx;
  height: 60rpx;
}

.order-list{
  /* border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx; */
  border-radius: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}

.order{
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order .order-left{
  display: flex;
  align-items: center;
}

.order .order-left image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  flex: none;
  margin-right: 20rpx;
}

.order .order-info>view,
.order .flavor-bundle>view{
  margin: 5rpx 0;
}

.order .order-info{
  display: flex;
  flex-direction: column;
  width: 450rpx;
}

.order .name{
  font-size: 30rpx;
}

.order .flavor-bundle,
.order .number{
  font-size: 25rpx;
  color: #8a8a8a;
}

.price-list{
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-list view:first-child{
  font-size: 30rpx;
  font-weight: 800;
}

.underline{
  width: 100%;
  height: 1rpx;
  background-color: #cdcdcd;
  margin: 40rpx 0rpx;
}

.amount-list{
  margin: 0;
}

.amount-list view{
  font-size: 36rpx !important;
}

.amount-list .amount{
  font-size: 46rpx !important;
  color: #e6442f;
}

.pay-button{
  width: 95%;
  height: 80rpx;
  position: fixed;
  bottom: 35rpx;
  left: 50%;
  transform: translate(-50%);
  color: #fff;
  display: flex;
  align-items: center;
}

.pay-button .left{
  width: 70%;
  height: 100%;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  background-color: #000;
  text-align: center;
  line-height: 80rpx;
}

.pay-button .right{
  width: 30%;
  height: 100%;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  background-color: #626aef;
  text-align: center;
  line-height: 80rpx;
}

.other-list{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.other-list>view{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 0;
}
.other-list>view:first-child{
  margin-top: 0;
}
.other-list>view:last-child{
  margin-bottom: 0;
}
.other-list .list>view:first-child{
  font-weight: 800;
}

.other-list .right-button{
  display: flex;
  align-items: center;
}

.other-list .right-button view{
  font-size: 25rpx;
}

.other-list .right-button image{
  width: 50rpx;
  height: 50rpx;
  margin-left: rpx;
}

.order-mask{
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  background-color: #000;
  opacity: 0.6;
}

.modal{
  width: 100vw;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  padding: 30rpx;
  padding-bottom: 60rpx;
  box-sizing: border-box;
}

.modal .header{
  width: 100%;
  text-align: center;
}

.modal .content textarea{
  width: 100%;
  background-color: #dbdbdb;
  margin-top: 30rpx;
  border-radius:10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.modal .bottom{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.remark-modal .bottom .cancel{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #bfbfbf;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.remark-modal .bottom .confirm{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #626aef;
  color: #fff;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.tableware-modal,
.pay-modal{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tableware-modal .left-button,
.pay-modal .left-button{
  width: 300rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  font-size: 26rpx;
  background-color: #dbdbdb;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.tableware-modal .right-button,
.pay-modal .right-button{
  width: 300rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  font-size: 26rpx;
  background-color: #dbdbdb;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.tableware-modal .right-button .claims{
  display: flex;
  align-items: center;
}

.tableware-modal .right-button image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.tableware-modal .choose-button,
.pay-modal .choose-button{
  background-color: #bcbee4;
}

.tableware-modal .choose-num{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.tableware-modal .choose-num view{
  margin: 0 20rpx;
}

.tableware-modal .confirm,
.pay-modal .confirm{
  width: 90%;
  height: 80rpx;
  margin-top: 30rpx;
  border-radius: 30rpx;
  background-color: #626aef;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
}

.delivery-time{
  margin: 10rpx 0;
  height: 230rpx;
  margin-top: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.delivery-time view{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border: 1.5px solid #bfbfbf;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.delivery-time .choose-button{
  background-color: #bcbee4;
  border: none;
  border-radius: 20rpx;
}
