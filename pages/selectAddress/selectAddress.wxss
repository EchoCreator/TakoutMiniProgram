.address {
  width: 100%;
  height: 80vh;
  box-sizing: border-box;
  overflow: scroll;
}

.address .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.address .empty image {
  width: 600rpx;
  height: 600rpx;
  margin-bottom: -80rpx;
}

.address .add-address {
  width: 80%;
  height: 80rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #626aef;
  color: #fff;
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
}

.address-list {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.address-container {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.address-container .right-button{
  display: flex;
  align-items: center;
}

.address-container .right-button image:last-child{
  margin-left: 20rpx;
}

.address-container image {
  width: 40rpx;
  height: 40rpx;
}

.address .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.address .content>view{
  margin-bottom: 20rpx;
}

.address .content .province-city,
.address .content .user-info {
  display: flex;
}

.address .content .province-city {
  font-size: 28rpx;
  color: #707070;
}

.address .content .detail {
  font-size: 32rpx;
}

.address .content .user-info {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.address .content .gender {
  margin: 0 15rpx;
}

.address .content .default {
  background-color: #626aef;
  margin-left: 15rpx;
  color: #fff;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}

.address .set-default{
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.address .set-default image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.address .underline{
  width: 100%;
  height: 1px;
  background-color: #cdcdcd;
  margin-top: 30rpx;
  border-radius: 5rpx;
}