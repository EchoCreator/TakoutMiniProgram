<my-navigation-bar title="历史订单" bindnavigate="navigate"></my-navigation-bar>
<view class="order-list" wx:for="{{orderList}}">
  <view class="order-info" bind:tap="showOrderDetail" data-orderid="{{item.id}}">
    <view class="left">
      <view class="order-number">订单号 {{item.orderNumber}}</view>
      <view class="address">{{item.addressDetail}}</view>
      <view class="consignee">收货人 {{item.consignee}}</view>
      <view class="order-time">下单时间 {{item.orderTime}}</view>
    </view>
    <view class="right">
      <view class="pay-status" wx:if="{{item.status===1}}">待付款</view>
      <view class="pay-status" wx:if="{{item.status===2}}">待接单</view>
      <view class="pay-status" wx:if="{{item.status===3}}">已接单</view>
      <view class="pay-status" wx:if="{{item.status===4}}">派送中</view>
      <view class="pay-status" wx:if="{{item.status===5}}">已完成</view>
      <view class="pay-status" wx:if="{{item.status===6}}">已取消</view>
      <view class="pay-status" wx:if="{{item.status===7}}">已退款</view>
    </view>
  </view>
  <view class="button-group">
    <view>删除订单</view>
    <view>评价</view>
  </view>
</view>