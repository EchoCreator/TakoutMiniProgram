page{
  background-color: #dbdbdb;
}

.header{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.header .pay-status{
  font-size: 45rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.header .pay-status .time{
  display: flex;
  margin-left: 20rpx;
}

.header .pay-status .time>view{
  display: flex;
}

.header .pay-status .button{
  font-size: 26rpx;
  font-weight: 400;
  background-color: #626aef;
  color: #fff;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.order-info{
  margin: 10rpx 0;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
}

.order-info .title{
  font-size: 32rpx;
  font-weight: 600;
}

.order-info .list{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  margin: 20rpx 0;
  font-size: 27rpx;
}

.order-info .list:last-child{
  margin-bottom: 0;
}

.order-info .list view:first-child{
  width: 25%;
  flex: none;
}

.dish-list{
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-list .dish-info{
  display: flex;
  align-items: center;
}

.dish-list .dish-info image{
  width: 120rpx;
  height: 120rpx;
  flex: none;
  margin-right: 20rpx;
}

.dish-list .dish-info .info-content{
  width: 80%;
}

.dish-list .dish-info .info-content>view{
  margin: 10rpx 0;
}

.dish-list .dish-info .info-content .bundle,
.dish-list .dish-info .info-content .flavor,
.dish-list .dish-info .info-content .num{
  font-size: 26rpx;
  color: #8a8a8a;
}

.order-dish-info .list{
  justify-content: space-between;
}

.order-dish-info .amount-list{
  font-size: 32rpx;
  font-weight: 600;
}

.cancel-info{
  width: 100% !important;
  font-weight: 400;
  font-size: 27rpx;
  color: #8a8a8a;
  margin-top: 20rpx;
}