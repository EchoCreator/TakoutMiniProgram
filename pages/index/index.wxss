/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.header {
  width: 100%;
  height: 350rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  background: linear-gradient(184deg, rgba(0, 0, 0, 0.55) 25%, rgba(51, 51, 51, 0) 96%);
}

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -99;
  top: 0;
  left: 0;
}

.user-profile {
  width: 100%;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  position: relative;
  top: 105rpx;
  z-index: 999;
  font-size: 30rpx;
  color: #fff;
}

.user-profile image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.shop-info {
  width: 100%;
  height: 90%;
  border-radius: 20rpx;
  background-color: #fff;
  position: relative;
  top: 150rpx;
  box-shadow: rgba(0, 0, 0, 0.1) 0px 6px 20px, rgba(0, 0, 0, 0.2) 0px 3px 6px;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-info .top {
  display: flex;
  align-items: center;
}

.shop-info .top-info {
  height: 95rpx;
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-info .name-status {
  display: flex;
  align-items: center;
}

.shop-info .name {
  font-size: 40rpx;
}

.shop-info .status {
  font-weight: 700;
  margin-left: 15rpx;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  font-size: 25rpx;
  border-radius: 5rpx;
}

.shop-info .open {
  color: #91734e;
  background-color: #fcd077;
}

.shop-info .close {
  color: #fff;
  background-color: #e15745;
}

.shop-info .top image {
  width: 100rpx;
  height: 100rpx;
}

.shop-info .icon-info-container {
  display: flex;
  align-items: center;
}

.shop-info .icon-info {
  display: flex;
  align-items: center;
  font-size: 23rpx;
  margin-right: 10rpx;
}

.shop-info .icon-info image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.shop-info .bottom {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}

.shop-info .bottom image {
  width: 50rpx;
  height: 50rpx;
}

.shop-info .address {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.shop-info .address image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.body {
  position: relative;
  top: 190rpx;
  box-shadow: rgba(0, 0, 0, 0.1) 0px -6px 20px, rgba(0, 0, 0, 0.2) 0px -3px 6px;
  border-radius: 20rpx;
}

.tabs {
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.tabs .tab {
  width: 70rpx;
  text-align: center;
  margin-right: 20rpx;
}

.tabs .active-tab {
  font-weight: 800;
}

.tabs-bar {
  width: 70rpx;
  height: 6rpx;
  background-color: #626aef;
  border-radius: 8rpx;
  position: relative;
  top: -15rpx;
  transition: all .3s ease;
}

.tab-content {
  width: 200%;
  display: flex;
  position: relative;
  transition: all .3s ease;
}

.tab-content .tab-content-body {
  width: 100%;
  padding: 10rpx 25rpx;
  box-sizing: border-box;
}

.tab-content .menu-content {
  padding-left: 0;
  padding-bottom: 0;
  display: flex;
}

.tab-content .menu {
  width: 28%;
}

.tab-content .menu .menu-item {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e6e6e6;
  font-size: 27rpx;
}

.tab-content .menu .menu-item:first-child {
  border-top-right-radius: 15rpx;
}

.active-item {
  background-color: #fff !important;
}

.active-item-before {
  border-bottom-right-radius: 15rpx;
}

.active-item-after {
  border-top-right-radius: 15rpx;
}

.tab-content .dish {
  padding-left: 20rpx;
  width: 72%;
  box-sizing: border-box;
  position: relative;
}

.dish-item {
  height: 220rpx;
  display: flex;
  margin-bottom: 40rpx;
}


.dish-item image {
  width: 220rpx;
  height: 220rpx;
  display: block;
  border-radius: 10rpx;
  flex: none;
  margin-right: 20rpx;
}

.dish-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-item {
  font-size: 27rpx;
  color: #8a8a8a;
}

.dish-item .dish-name {
  font-size: 35rpx;
  color: #000;
}

.dish-item .description {
  height: 30%;
  text-overflow: ellipsis;
  overflow: hidden;
}

.dish-item .sales {
  display: flex;
  align-items: center;
}

.dish-item .sales image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 5rpx;
}

.dish-item .price-button {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.ball {
  width: 32rpx;
  height: 32rpx;
  position: fixed;
  right: 60rpx;
  visibility: hidden;
  z-index: -99;
}

.ball .ball-item {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #e6442f;
}

.active-ball {
  animation: horizontal-animation .5s;
  animation-timing-function: cubic-bezier(.11, -.33, .55, .11);
}

.active-ball .ball-item {
  animation: vertical-animation .5s;
  animation-timing-function: linear;
}


@keyframes vertical-animation {
  0% {
    visibility: visible;
    z-index: 99;
    transform: translateX(0rpx);
  }

  100% {
    visibility: visible;
    z-index: 99;
    transform: translateX(-393rpx);
  }
}

@keyframes horizontal-animation {
  100% {
    top: 90vh;
  }
}

.dish-item .price {
  font-size: 30rpx;
  color: #e6442f;
}

.dish-item .price-button .choose {
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  background-color: #626aef;
  margin: 0;
  border-radius: 20rpx;
  color: #fff;
  padding: 0 15rpx;
}

.dish-item .price-button .disabled-button {
  background-color: #8a8a8a !important;
}

.dish-item .price-button .add {
  width: 35rpx;
  height: 35rpx;
  margin: 0;
}