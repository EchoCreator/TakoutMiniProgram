.form-mask{
  width: 100vw;
  height: 100vh;
  background-color: #000;
  opacity: 70%;
  position: fixed;
  top: 0;
  left: 0;
}

.address-form{
  width: 100vw;
  padding: 30rpx;
  box-sizing: border-box;
  padding-bottom: 80rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
}

.address-form form{
  font-weight: 700;
}

.address-form input,
.address-form radio-group{
  margin-bottom: 30rpx;
  font-weight: 400;
}

.address-form radio{
  margin-right: 30rpx;
}

radio .wx-radio-input {
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  background-color: red;
  border: 2rpx solid #e6c171;
}

.address-form button{
  background-color: #626aef;
  color: #fff;
  font-size: 30rpx;
  font-weight: 400;
}

.required-label::before{
  content: "* ";
  color: #e6442f;
}