<view wx:if="{{formVisible}}">
  <view class="form-mask" bind:tap="close"></view>
  <view class="address-form">
    <form bindsubmit="formSubmit" wx:if="{{selectedAddress.length===0}}">
      <label for="">所在省</label><input type="text" name="provinceName" class="content" placeholder="请输入所在省" />
      <label for="">所在市</label><input type="text" name="cityName" class="content" placeholder="请输入所在市" />
      <label for="">所在区</label><input type="text" name="districtName" class="content" placeholder="请输入所在区" />
      <label for="" class="required-label">详细地址</label><input type="text" name="detail" class="content" placeholder="请输入详细地址" />
      <label for="" class="required-label">收货人</label><input type="text" name="consignee" class="content" placeholder="请输入收货人" />
      <label for="" class="required-label">手机号</label><input type="number" name="phoneNumber" class="content" placeholder="请输入手机号" maxlength="11" />
      <label for="" class="required-label">性别</label>
      <radio-group name="gender">
        <radio color="#626aef" value="1"> 先生</radio>
        <radio color="#626aef" value="2"> 女士</radio>
      </radio-group>
      <button class="wehx-foot-btn" hover-class="wehx-button_hover" formType="submit" data-edit="false">保存地址</button>
    </form>
    <form bindsubmit="formSubmit" wx:if="{{selectedAddress.length!==0}}">
      <label for="">所在省</label><input type="text" name="provinceName" class="content" placeholder="请输入所在省" value="{{selectedAddress.provinceName}}" />
      <label for="">所在市</label><input type="text" name="cityName" class="content" placeholder="请输入所在市" value="{{selectedAddress.cityName}}" />
      <label for="">所在区</label><input type="text" name="districtName" class="content" placeholder="请输入所在区" value="{{selectedAddress.districtName}}" />
      <label for="" class="required-label">详细地址</label><input type="text" name="detail" class="content" placeholder="请输入详细地址" value="{{selectedAddress.detail}}" />
      <label for="" class="required-label">收货人</label><input type="text" name="consignee" class="content" placeholder="请输入收货人" value="{{selectedAddress.consignee}}" />
      <label for="" class="required-label">手机号</label><input type="number" name="phoneNumber" class="content" placeholder="请输入手机号" value="{{selectedAddress.phoneNumber}}" maxlength="11" />
      <label for="" class="required-label">性别</label>
      <radio-group name="gender">
        <radio color="#626aef" value="1" checked="{{selectedAddress.gender===1}}"> 先生</radio>
        <radio color="#626aef" value="2" checked="{{selectedAddress.gender===2}}"> 女士</radio>
      </radio-group>
      <button class="wehx-foot-btn" hover-class="wehx-button_hover" formType="submit" data-edit="true">保存地址</button>
    </form>
  </view>
</view>