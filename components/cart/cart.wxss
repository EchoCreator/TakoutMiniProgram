.cart-mask {
  width: 100vw;
  height: 100vh;
  background-color: #000;
  opacity: 70%;
  position: fixed;
  top: 0;
  left: 0;
}

.order-detail {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding-bottom: 140rpx;
  box-sizing: border-box;
  background-color: #fff;
  overflow: hidden;
  border-radius: 30rpx;
}

.order-header{
  width: 100%;
  height: 100rpx;
  background-color: #626aef;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.order-header .clear{
  display: flex;
  align-items: center;
}

.order-header image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.order-container{
  width: 100%;
  min-height: 120rpx;
  max-height: 720rpx;
  overflow-y: scroll;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.order {
  width: 100%;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}

.order .order-left{
  display: flex;
  align-items: center;
}

.order-detail .order image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  flex: none;
}

.order-detail .name-price {
  min-height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 32rpx;
  margin-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.name-price>view{
  margin: 5rpx 0;
}

.order-detail .name{
  font-size: 28rpx;
  font-weight: 700;
}

.order-detail .flavor-bundle{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  flex-wrap: wrap;
}

.order-detail .name-price .price {
  color: #e6442f;
}

.order-detail .flavor-bundle>view{
  margin: 5rpx 0;
}

.order-detail .number-button{
  display: flex;
  align-items: center;
}

.order-detail .number-button image:last-child,
.order-detail .number-button .number{
  margin-left: 10rpx;
}

.order-detail .number-button image{
  width: 30rpx;
  height: 30rpx;
}

.cart {
  width: 72%;
  height: 100rpx;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
}

.cart .left {
  width: 75%;
  height: 100%;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  background-color: #000;
  display: flex;
}

.cart .right {
  width: 25%;
  height: 100%;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  background-color: #626aef;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart .disabled-button {
  background-color: #8a8a8a !important;
}

.cart .left .img-count {
  position: relative;
  top: -15rpx;
  right: 30rpx;
  display: flex;
}

.cart .img-count .count {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #e6442f;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  right: 20rpx;
  font-size: 24rpx;
}

.cart .img-count .zero-count {
  background-color: #8a8a8a !important;
}

.cart .left image {
  width: 120rpx;
  height: 120rpx;
}

.cart .total-price {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  color: #fff;
  position: relative;
  right: 15rpx;
}

.cart .dish-price {
  font-size: 35rpx;
}

.cart .delivery-price {
  font-size: 22rpx;
}
